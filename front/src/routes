    { path: '/infolica/affaires_new', component: NewAffaire, name: 'NewAffaire' },
    { path: '/infolica/clients', component: Clients, name: 'Clients' },
    { path: '/infolica/clients/new', component: ClientsEdit, name: 'ClientsNew' },
